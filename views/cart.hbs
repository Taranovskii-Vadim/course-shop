<h1>Корзина товаров</h1>

{{#if cart.items.length}}
<div class="cart">
    <table>
        <thead>
            <tr>
                <th>Название</th>
                <th>Количество</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            {{#each cart.items}}
            <tr>
                <td>{{title}}</td>
                <td>{{count}}</td>
                <td>
                    <button class="waves-effect waves-light btn-small remove" data-id="{{id}}">Удалить</button>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    <p><strong>Цена: </strong><span class="price">{{cart.totalPrice}}</span></p>
    <form action="/orders" method="POST">
        <button class="btn btn-primary" type="submit">Оформить заказ</button>
    </form>
</div>

{{else}}
<p>Корзина пустая</p>
{{/if}}