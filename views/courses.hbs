{{#if courses.length}}
{{#each courses}}
<div class="row">
    <div class="col s5">
        <div class="card">
            <div class="card-image">
                <img style="object-fit: contain;" src="{{img}}">
                <span class="card-title black-text">{{title}}</span>
            </div>
            <div class="card-content">
                <p><b>{{price}}</b></p>
                <p>Lorem, ipsum dolor sit amet consectetur adipisicing elit. Nemo earum, consequuntur laboriosam
                    officiis blanditiis ducimus!</p>
            </div>
            <div class="card-action">
                <a href="/courses/{{id}}/edit?allow=true">Редактировать курс</a>
            </div>
        </div>
    </div>
</div>
{{/each}}
{{else}}
<p>Курсов пока что нет :(</p>
{{/if}}