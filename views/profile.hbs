<h1>Профиль</h1>

<div class="row">
    <div class="col s6" style="padding: 0;">
        {{#if user.avatarUrl}}
        <img class="avatar" src="{{user.avatarUrl}}" alt="err">
        {{else}}
        <p>Аватара нет</p>
        {{/if}}
    </div>
    <div class="col s6">
        <p>Ваш email: <strong>{{user.email}}</strong></p>
        <form action="/profile" method="post" enctype="multipart/form-data">
            <div class="input-field">
                <input placeholder="Ваше имя" type="text" name="name" class="validate" value="{{user.name}}" required>
                <span class="helper-text" data-error="Укажите значение" data-success="Верно"></span>
            </div>
            <div class="file-field input-field">
                <div class="btn">
                    <span>Картинка</span>
                    <input type="file" name="avatar">
                </div>
                <div class="file-path-wrapper">
                    <input class="file-path validate" type="text">
                </div>
            </div>
            <input type="hidden" name="_csrf" value="{{@root.csrf}}">
            <button class="btn btn-primary" type="submit">Изменить</button>
        </form>
    </div>
</div>